<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/new_background"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/activity_horizontal_margin"
      tools:context=".MainActivity"
      tools:ignore="HardcodedText"
      >

    <!-- 后台管理 -->

    <TextView
        android:layout_marginTop="0dp"
        android:text="@string/back_ifo"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/btn00"
        android:text="@string/re_connect"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/btn01"
        android:text="@string/general_control_interface"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/btn02"
        android:text="@string/management_result"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/btn_retry_set"
        android:text="@string/management_retry_count"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/odor_release_delay"
        android:text="@string/management_advance_timing"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/random_fix_mode"
        android:text="@string/management_test_mode"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/release_time"
        android:text="@string/management_release_timing"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/btn_language_select"
        android:text="@string/lang_select"
        android:textSize="20sp"
        style="@style/SampleButton"
        />

    <TextView
        android:id="@+id/retryNumberRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/management_retry_count_remind"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/retryNumberShow"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mode_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/management_test_mode_remind"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mode_to_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/management_fix_mode"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/release_time_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/management_release_timing_remind"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/release_time_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3s"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/release_delay_time_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/management_advance_timing_remind"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/delay_time_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2s"
        android:textColor="#ffffff"
        android:textSize="20sp" />

  </LinearLayout>

</ScrollView>
