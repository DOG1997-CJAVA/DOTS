<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/listview_option1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/option_1"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/listview_option2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listview_option2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/option_2"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/listview_option1"
        app:layout_constraintEnd_toStartOf="@+id/listview_option3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listview_option1"
        app:layout_constraintTop_toTopOf="@+id/listview_option1" />

    <TextView
        android:id="@+id/listview_option3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/option_3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/listview_option2"
        app:layout_constraintEnd_toStartOf="@+id/listview_option4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listview_option2"
        app:layout_constraintTop_toTopOf="@+id/listview_option2" />

    <TextView
        android:id="@+id/listview_option4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/option_4"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/listview_option3"
        app:layout_constraintEnd_toStartOf="@+id/listview_answer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listview_option3"
        app:layout_constraintTop_toTopOf="@+id/listview_option3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/listview_answer"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/answer"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/listview_option3"
        app:layout_constraintEnd_toStartOf="@+id/listview_correct_answer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listview_option4"
        app:layout_constraintTop_toTopOf="@+id/listview_option3" />

    <TextView
        android:id="@+id/listview_correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/correct_answer"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/listview_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listview_answer"
        app:layout_constraintTop_toTopOf="@+id/listview_answer" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_option1" />

    <ListView
        android:id="@+id/resultdetail_lv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>