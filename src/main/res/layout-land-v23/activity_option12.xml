<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/page1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="400sp"
                            android:layout_height="230sp"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/pingguo" />

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusable="true"
                            android:clickable="true"
                            android:text="苹果"
                            android:textSize="70sp"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="400dp"
                            android:layout_height="230dp"
                            android:layout_marginTop="10dp"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/xiangjiao">
                        </ImageView>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusable="true"
                            android:clickable="true"
                            android:text="香蕉"
                            android:textSize="70sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="400dp"
                            android:layout_height="230dp"
                            android:layout_marginTop="10dp"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/ningmeng"></ImageView>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusable="true"
                            android:clickable="true"
                            android:text="柠檬"
                            android:textSize="70sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="400dp"
                            android:layout_height="230dp"
                            android:layout_marginTop="10dp"
                            android:foreground="?selectableItemBackground"
                            android:scaleType="fitXY"
                            android:src="@drawable/chengzi"></ImageView>

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusable="true"
                            android:clickable="true"
                            android:text="橙子"
                            android:textSize="70sp" />

                    </TableRow>

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/but_retry_clicked"
                style="@style/SampleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_sniff_retry"
                android:textSize="55sp" />

            <ProgressBar
                android:id="@+id/retry_progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="6" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>