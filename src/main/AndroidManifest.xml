<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">
    <!-- 可选权限说明 -->
    <!-- 允许应用程序联网（必须） -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 允许访问WiFi网络状态信息（必须） -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 允许读取手机状态（必须） -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 允许访问网络状态（必须） -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 允许写手机存储（必须） -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- GUI自动填充验证码功能（非必须） -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" /> <!-- 从短信中读取验证码接口（非必须） -->
    <uses-permission android:name="android.permission.READ_SMS" /> <!-- 应用内好友功能（非必须） -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <supports-screens android:smallScreens="true" />

    <application
        android:name=".language.FunApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/maintop"
        android:roundIcon="@mipmap/ic_launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        xmlns:tools="http://schemas.android.com/tools"
        tools:replace="label">
        <activity android:name=".BaseActivity"></activity>
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConnectActivity" />

        <service
            android:name=".service.SocketService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".RegardActivity" />
        <activity
            android:name=".TesterActivity"
            android:label="@string/info_input_page" />
        <activity android:name=".Ready12Activity" />
        <activity android:name=".ResultActivity" />
        <activity
            android:name=".TabActivity"
            android:launchMode="singleTask" />
        <activity android:name=".InstructionActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ManagementActivity" />
        <activity android:name=".utils.options.Option12Activity" />
        <activity android:name=".ManagementTabActivity" />
        <activity android:name=".ControlTestActivity" />
        <activity android:name=".SimulationTesterActivity" />
        <activity android:name=".Ready20Activity" />
        <activity android:name=".Ready40Activity" />
        <activity android:name=".utils.options.Option20Activity" />
        <activity android:name=".utils.options.Option40Activity" />
        <activity android:name=".Ready2Activity" />
        <activity android:name=".utils.options.Option2Activity" />
        <activity android:name=".ClickTheLvItemContentActivity" />
        <activity android:name=".ResultDetailActivity" />
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".FeedBackActivity" />
    </application>

</manifest>